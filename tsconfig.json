{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"erasableSyntaxOnly": true,
		"rewriteRelativeImportExtensions": true,
		"verbatimModuleSyntax": true,
	},
	"include": ["./src/*.ts"],
}
